<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cutie"
     tools:context=".frontActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/register"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout3">

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:id="@+id/fb"

            android:background="#ff000000"
            android:src="@drawable/f" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:id="@+id/google"

                android:background="#ff000000"
                android:src="@drawable/g"
                android:layout_marginLeft="10dp" />



        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="-------------------------------   OR   -------------------------------"
            android:id="@+id/a"
            android:textColor="#fffef3ff"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fffef3ff"
            android:text="Sign in here"
            android:id="@+id/sign"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"

            android:textColorHint="#ffddd2de"
            android:textColor="#ffddd2de"
            android:ems="10"
            android:id="@+id/e_mail"
            android:layout_gravity="center_horizontal"
            android:hint="Email address" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textColor="#ffddd2de"
            android:ems="10"
            android:textColorHint="#ffddd2de"
            android:id="@+id/pas"
            android:layout_gravity="center_horizontal"
            android:hint="Password" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/register"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Sign in"
                    android:id="@+id/signin"
                android:layout_above="@+id/register"
                android:textColor="#ffddd2de"
                android:background="#ff3f3b38"

                android:layout_centerHorizontal="true"
                android:layout_gravity="right" />

            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="Create new account"
                android:id="@+id/register"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffddd2de"
                android:background="#ff3f3b38"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/linearLayout4"
                android:layout_alignEnd="@+id/linearLayout4"
                android:layout_marginTop="100dp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
