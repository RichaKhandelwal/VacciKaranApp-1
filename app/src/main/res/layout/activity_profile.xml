    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="richa.osahub.com.vaccikaranapp.Profile"
        >
        <!-- <shape android:layout_width="match_parent"
             android:layout_height="match_parent">
             <gradient
                android:angle="0"
                 android:centerX="0.4"
                 android:centerY="0.5"
                 android:endColor="#ffff444d"
                 android:gradientRadius="90"
                 android:startColor="#ff332eff"
                 android:type="linear"

                 android:useLevel= "true" />

         </shape>
     -->


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/profile"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Richa"
            android:id="@+id/textView"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:gravity="bottom|left"
            android:textStyle="bold"
            android:autoText="false"
            android:layout_alignBottom="@+id/image"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/name_background"
            android:padding="10dp"
            android:textColor="#ffffffff"
            android:layout_alignParentEnd="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pencil1"
            android:src="@drawable/editpen"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textView" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Vaccines Covered"
            android:id="@+id/textView7"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:background="@drawable/name_background"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="BCG [Bacillus Calmette–Guérin]"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Hepatitus B 1"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <!--  <ListView
